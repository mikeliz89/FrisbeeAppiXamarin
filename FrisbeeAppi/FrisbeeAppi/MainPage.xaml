<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrisbeeAppi.MainPage" 
             Title="FrisbeeAppi">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Katso pelaajia"
                     Clicked="OnNavigateToPlayersListClicked" />
        <ToolbarItem Text="Katso ratoja"
                     Clicked="OnNavigateToTracksListClicked" />
        <ToolbarItem Text="+"
                     Clicked="OnGameAddedClicked" />
    </ContentPage.ToolbarItems>
    <ListView x:Name="listView"
              Margin="20"
              ItemSelected="OnListViewItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Text}"
                          Detail="{Binding StartDateTime}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    
</ContentPage>